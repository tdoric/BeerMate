<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dip"
    android:background="@mipmap/background">

    <TextView android:text="Beer Name" android:id="@+id/tap_rank_dialog_text"
        android:textSize="24dp" android:layout_marginTop="10dp"
        android:textColor="@color/grey"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView android:text="Rate" android:id="@+id/tap_rank_dialog_textRate"
        android:textSize="50dp" android:layout_marginTop="10dp"
        android:textColor="@color/grey"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView android:text="Tap to rate" android:id="@+id/tap_rank_dialog_textHelp"
        android:textSize="15dp" android:layout_marginTop="10dp"
        android:textColor="@color/grey"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <Button android:id="@+id/tap_rank_dialog_rateBtn"
        android:layout_height="wrap_content"
        android:text="RANK"  android:focusable="false"
        android:layout_margin="5dip" android:textColor="@color/grey"
        android:textSize="20dip" android:layout_width="fill_parent" />

    <Button android:id="@+id/tap_rank_dialog_cancelBtn"
        android:layout_height="wrap_content"
        android:text="CANCEL"  android:focusable="false"
        android:layout_margin="5dip" android:textColor="@color/grey"
        android:textSize="20dip" android:layout_width="fill_parent" />

</LinearLayout>