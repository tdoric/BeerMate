<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/background">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="216dp"
            android:id="@+id/post_image"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:adjustViewBounds="true"

            android:layout_marginTop="10dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_title"
            android:text="Post title goes here"
            android:textColor="@color/grey"
            android:fontFamily="Roboto"
            android:padding="15dp"
            android:textSize="25dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/buttonRate"
            android:fontFamily="Roboto"
            android:textSize="20dp"
            android:layout_width="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Rate it!" />
        <Button
            android:id="@+id/buttonShowPubs"
            android:fontFamily="Roboto"
            android:textSize="20dp"
            android:layout_width="170dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Availability" />
        <TextView
            android:id="@+id/labelType"
            android:layout_width="match_parent"
            android:background="#07000000"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Type"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_text"
            android:text="Type of beer"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" />
        <TextView
            android:id="@+id/labelPercentage"
            android:layout_width="match_parent"
            android:background="#07000000"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Percentage"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_percentage"
            android:text="Post desc goes hre"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" />
        <TextView
            android:id="@+id/labelCountry"
            android:layout_width="match_parent"
            android:background="#07000000"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Country"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_country"
            android:text="Country goes here"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" />

        <TextView
            android:id="@+id/labelBrewery"
            android:layout_width="match_parent"
            android:background="#07000000"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Brewery"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_brewery"
            android:text="Brewery goes here"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" />
        <TextView
            android:id="@+id/labelAverageRate"
            android:layout_width="match_parent"
            android:background="#07000000"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Average rate"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_averageRate"
            android:text="Average rate goes here"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" />
        <TextView
            android:id="@+id/labelVotes"
            android:layout_width="match_parent"
            android:background="#07000000"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Votes"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/post_votes"
            android:text="Number of votes goes here"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp" />


    </LinearLayout>


</android.support.v7.widget.CardView>

